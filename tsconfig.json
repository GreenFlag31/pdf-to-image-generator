{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/test.ts"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node", "mocha", "chai"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  }
}
